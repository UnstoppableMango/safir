<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:Safir.ControlLibrary.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Safir.ControlLibrary;component/Converters/BooleanToVisibilityConverter.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/Safir.ControlLibrary;component/Converters/InverseBooleanConverter.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/Safir.ControlLibrary;component/Converters/StringConcatConverter.xaml"/>

        <ResourceDictionary Source="pack://application:,,,/Safir.ControlLibrary;component/Styles/Colors.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/Safir.ControlLibrary;component/Styles/Fonts.xaml"/>

        <ResourceDictionary Source="pack://application:,,,/Safir.ControlLibrary;component/Themes/WindowControlButtons.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/Safir.ControlLibrary;component/Themes/SafirWindowStyle.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style BasedOn="{StaticResource WindowControlButtons}" TargetType="{x:Type c:WindowControlButtons}" />

</ResourceDictionary>
